<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Shaunebu.Controls.Controls.Chip"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="chipView"
    HorizontalOptions="Start"
    VerticalOptions="Center">

    <Border
        x:Name="chipBorder"
        Padding="12,6"
        BackgroundColor="{Binding ChipBackgroundColor, Source={x:Reference chipView}}"
        HorizontalOptions="Start"
        MinimumHeightRequest="24"
        MinimumWidthRequest="48"
        Stroke="{Binding BorderColor, Source={x:Reference chipView}}"
        StrokeThickness="1"
        VerticalOptions="Center">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="{Binding CornerRadius, Source={x:Reference chipView}}" />
        </Border.StrokeShape>

        <HorizontalStackLayout
            x:Name="chipLayout"
            Spacing="6"
            VerticalOptions="Center">
            <Image
                x:Name="iconImage"
                HeightRequest="12"
                IsVisible="False"
                WidthRequest="12" />
            <Label
                x:Name="textLabel"
                FontSize="14"
                TextColor="{Binding TextColor, Source={x:Reference chipView}}"
                VerticalOptions="Center" />
            <Border
                x:Name="badgeBorder"
                Padding="2,0"
                BackgroundColor="{Binding BadgeColor, Source={x:Reference chipView}}"
                IsVisible="False"
                StrokeShape="RoundRectangle 5"
                VerticalOptions="Center">
                <Label
                    x:Name="badgeLabel"
                    Text="{Binding BadgeText, Source={x:Reference chipView}}"
                    TextColor="White"
                    VerticalOptions="Center" />
            </Border>
            <ImageButton
                x:Name="closeButton"
                Margin="0,0,-15,0"
                Padding="15"
                BackgroundColor="Transparent"
                HeightRequest="12"
                IsVisible="False"
                Source="icon_chip_close"
                WidthRequest="12" />
        </HorizontalStackLayout>
    </Border>
</ContentView>
